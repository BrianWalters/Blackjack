@import '../source/blackjack'

bodyText()
    h1,h2,h3,h4,h5,h6,p
        margin-bottom 1em

gutter = 1vw
breakpoint = 768px
bigBreakpoint = 1024px

.primary-container
    margin 0 20px

    +makeBreakpoint(1024px)
        margin 0 auto
        max-width 900px
        width 75vw

code
    background-color #DDD
    display inline-block
    padding 0 .2em

dl
    border 1px solid #333
    border-radius 4px
    display flex
    flex-wrap wrap
    margin-bottom 1em
    padding 1em

    dt, dd
        &:not(:last-of-type)
            margin-bottom 1em

    dt
        flex-basis 25%
        padding-right .5vw
        text-align right

    dd
        flex-basis 75%
        padding-left .5vw

//Introduction 'Welcome to Blackjack'

.introduction
    bodyText()
    clearfix()

    .page-header
        text-align center

    &__row
        gridContainer()

    &__abstract
    .bender-video
    &__features
    &__explanation
        gridCell(.5, breakpoint, gutter)

.feature-list
    list-style inside

//Grid section
.grid-section
    bodyText()

.grid-container
    gridContainer()
    margin-bottom gutter

galleryCell()
    border 1px solid #333
    border-radius 4px
    line-height 2.25em
    padding 1em

.grid-cell-50-gutter
    gridCell(.5, breakpoint, gutter)
    galleryCell()

.grid-cell-40
    gridCell(.4, breakpoint)
    galleryCell()

.grid-cell-25
    gridCell(.25, breakpoint)
    galleryCell()

.grid-cell-20
    gridCell(.2, breakpoint)
    galleryCell()

.grid-cell-1-7-gutter
    gridCell(1/7, breakpoint, gutter)
    galleryCell()

.grid-cell-3-5-gutter
    gridCell(3/5, breakpoint, gutter)
    galleryCell()

.grid-cell-1-5-gutter
    gridCell(1/5, breakpoint, gutter)
    galleryCell()

.double-breakpoint-cell
    gridCell(1/2, breakpoint, gutter, 2)
    gridCell(1/3, bigBreakpoint, gutter, 3)
    galleryCell()

.double-breakpoint-cell-two
    gridCell(1/3, breakpoint, gutter, 3)
    gridCell(1/5, bigBreakpoint, gutter)
    galleryCell()

.third
    gridCell(1/3, breakpoint, gutter, 3)

.bordered-demo-box
    background-color green
    border-color red
    border-style solid
    border-width 10px
    color #FFF
    height 120px
    line-height @height - @border-width * 2
    text-align center
    width @height

.breakpoint-demo
    font-size 24px
    line-height 40px
    text-align center

    &:after
        content 'Below 500px'

    +makeBreakpoint(500px, 1000px)
        &:after
            content 'Between 500px and 1000px'

    +makeBreakpoint(1000px)
        &:after
            content 'Above 1000px'