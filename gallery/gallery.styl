@import '../source/blackjack'

main
    text-align center

gutter = 1vw
breakpoint = 768px
bigBreakpoint = 1024px

.grid-container
    gridContainer()
    margin-bottom gutter

galleryCell()
    background-color #DDD
    border-radius 4px
    font-size 1.5em
    line-height 2.25em
    text-align center

.grid-cell-50-gutter
    gridCell(.5, gutter, breakpoint)
    galleryCell()

.grid-cell-40
    gridCell(ratio: .4, startGridAt: breakpoint)
    galleryCell()

.grid-cell-25
    gridCell(ratio: .25, startGridAt: breakpoint)
    galleryCell()

.grid-cell-20
    gridCell(ratio: .2, startGridAt: breakpoint)
    galleryCell()

.grid-cell-1-7-gutter
    gridCell(1/7, gutter, breakpoint)
    galleryCell()

.grid-cell-3-5-gutter
    gridCell(3/5, gutter, breakpoint)
    galleryCell()

.grid-cell-1-5-gutter
    gridCell(1/5, gutter, breakpoint)
    galleryCell()

.double-breakpoint-cell
    gridCell(1/3, gutter, breakpoint, 3)
    gridCell(1/6, gutter, bigBreakpoint, 6)
    galleryCell()

.third
    gridCell(1/3, gutter, breakpoint, 3)

.bordered-demo-box
    background-color green
    border-color red
    border-style solid
    border-width 10px
    color #FFF
    height 120px
    line-height @height - @border-width * 2
    text-align center
    width @height

.breakpoint-demo
    font-size 24px
    line-height 40px
    text-align center

    &:after
        content 'Below 500px'

    +makeBreakpoint(500px, 1000px)
        &:after
            content 'Between 500px and 1000px'

    +makeBreakpoint(1000px)
        &:after
            content 'Above 1000px'