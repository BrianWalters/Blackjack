@import '../source/blackjack'

main
    text-align center

.bordered-demo-box
    background-color green
    border-color red
    border-style solid
    border-width 10px
    color #FFF
    height 120px
    line-height @height - @border-width * 2
    text-align center
    width @height

.breakpoint-demo
    font-size 24px
    line-height 40px
    text-align center

    &:after
        content 'Below 500px'

    +breakpoint(500px, 1000px)
        &:after
            content 'Between 500px and 1000px'

    +breakpoint(1000px)
        &:after
            content 'Above 1000px'